<scenexx formatVersion="0.0" physics="on">
  <ambientLight colour="1 1 1 1"/>
  <nodes>
    <node name="sphere">
      <entity>
        <parametric2
           material="sphere"
           urange="0 2pi closed"
           vrange="0  pi open"
           sampling="200 200"
           >
          <x function="cos(u)*sin(v)"/>
          <y function="sin(u)*sin(v)"/>
          <z function="cos(v)"/>
        </parametric2>
      </entity>
    </node>
    <node name="floor">
      <entity>
        <vtk filename="floor_00.obj" material="floor"/>
      </entity>
    </node>
    <node name="myLight">
      <light type="point">
        <diffuse  colour="0 1 0 1"/>
        <specular colour="0 1 0 1"/>
      </light>
      <position point="2 2 2"/>
    </node>
    <node name="myCamera">
      <camera>
        <clipping near="1e-3" far="500"/>
      </camera>
      <position point="3 3 3"/>
      <lookAt   point="0 0 0"/>
    </node>
  </nodes>
</scenexx>
